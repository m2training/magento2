<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="wellevate_log_event" resource="default" engine="innodb" comment="Customer Log event">
        <column xsi:type="int" name="id" padding="10" unsigned="false" nullable="false" identity="true" comment="Log ID"/>
        <column xsi:type="int" name="magento_customer_id" padding="10" unsigned="true" nullable="true" comment="Magento Customer Id"/>
        <column xsi:type="varchar" name="user" nullable="true" comment="CSA user name or customer emails"/>
        <column xsi:type="varchar" name="changed_by" nullable="true" length="255" comment="Changed By CSA or Customer"/>
        <column xsi:type="varchar" name="value_before" nullable="true" length="255" comment="JSON Values Before"/>
        <column xsi:type="varchar" name="value_after" nullable="true" length="255" comment="JSON Values After"/>
        <column xsi:type="varchar" name="field_type" nullable="true" length="255" comment="Field Type - i.e. text or field"/>
        <column xsi:type="varchar" name="field_name" nullable="true" length="255" comment="Field Name"/>
        <column xsi:type="varchar" name="operation" nullable="true" length="255" comment="Operation Status"/>
        <column xsi:type="varchar" name="scope" nullable="true" length="255" comment="scope"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Date Changed"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
