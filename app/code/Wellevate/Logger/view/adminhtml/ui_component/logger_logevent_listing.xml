<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">logger_logevent_listing.wellevate_logger_logevent_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>customer_log_event</spinner>
        <deps>
            <dep>logger_logevent_listing.wellevate_logger_logevent_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="wellevate_logger_logevent_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">wellevate_logger_logevent_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to delete selected customers?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="logger/logevent/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="customer_log_event">
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>id</indexField>
            </settings>
        </selectionsColumn>
        <column name="id" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="magento_customer_id" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Magento Customer Id</label>
            </settings>
        </column>
        <column name="user" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">UserName</label>
            </settings>
        </column>
        <column name="changed_by" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Changed By</label>
            </settings>
        </column>
        <column name="scope" sortOrder="60">
            <settings>
                <filter>text</filter>
                <label translate="true">Scope</label>
            </settings>
        </column>
        <column name="field_name" sortOrder="70">
            <settings>
                <filter>text</filter>
                <label translate="true">Field Name</label>
            </settings>
        </column>
        <column name="value_before" sortOrder="80">
            <settings>
                <filter>text</filter>
                <label translate="true">Before</label>
            </settings>
        </column>
        <column name="value_after" sortOrder="90">
            <settings>
                <filter>text</filter>
                <label translate="true">After</label>
            </settings>
        </column>
        <column name="operation" sortOrder="100">
            <settings>
                <filter>text</filter>
                <label translate="true">Operations</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="110">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Last Activity</label>
            </settings>
        </column>
    </columns>
</listing>
