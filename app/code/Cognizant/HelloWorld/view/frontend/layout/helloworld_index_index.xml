<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="sidebar.main">
            <block name="blockfive" template="Cognizant_HelloWorld::blockfive.phtml"  cacheable="false"/> 
            <container name="demo.container" as="demoContainer" label="demo Container" htmlTag="section" htmlClass="demo-container" />
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Cognizant\HelloWorld\Block\Hello" name="helloworld" template="Cognizant_HelloWorld::hello.phtml" after="blockfour" >
            <arguments>
                <argument name="css_class" xsi:type="string">headerStyles</argument>
                <argument name="custom" xsi:type="string">customtest</argument>
            </arguments>
             <action method="setToys">
                <argument translate="true" name="toys" xsi:type="string">Custom Toys</argument>
             </action>
             <action method="setPet">
                <argument translate="true" name="pet" xsi:type="string">Dogs</argument>
             </action>
            </block>
            <block name="blockone" template="Cognizant_HelloWorld::blockone.phtml" />
            <block name="blocktwo" template="Cognizant_HelloWorld::blocktwo.phtml"  />
            <block name="blockthree" template="Cognizant_HelloWorld::blockthree.phtml" before="blockone" >
                  <action method="setFavouriteProduct">
                    <argument translate="true" name="toys" xsi:type="string">bat and ball</argument>
                </action>
            </block>
            <block name="blockfour" template="Cognizant_HelloWorld::blockfour.phtml" /> 

          
               
            <container name="some.container" as="someContainer" label="Some Container" htmlTag="div" htmlClass="some-container" />
        </referenceContainer>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">148</argument>
                <argument name="logo_img_height" xsi:type="number">43</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Custom Layout Tutorial</argument>
            </action>
        </referenceBlock>
        <move element="blocktwo" destination="sidebar.main"  before="blockfive"/>
         <referenceContainer name="some.container">
            <block name="blocksix" template="Cognizant_HelloWorld::blocksix.phtml" />   
            
         </referenceContainer>

          <referenceContainer name="demo.container">
            <block name="blockseven" template="Cognizant_HelloWorld::blockseven.phtml" />   
         </referenceContainer>
    </body>
</page>