                    <label>Touch Icon - 1024x1024</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">ui</upload_dir>
                    <comment>'png', 'jpg', 'jpeg', 'svg' file formats are allowed.</comment>
                </field>
                <field id="icon_1024x1024" type="Magento\Config\Block\System\Config\Form\Field\File"
                       translate="label" sortOrder="130" showInDefault="1" showInWebsite="1">
                    <label>Touch Icon - 1024x1024</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">ui</upload_dir>
                    <comment>'png', 'jpg', 'jpeg', 'svg' file formats are allowed.</comment>
                </field>
            </group>

            <group id="header" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0"
                   showInStore="0">
                <label>Header Settings</label>
                <field id="navigation" showInStore="0" showInWebsite="1" showInDefault="1" sortOrder="10"
                       type="textarea" translate="label" canRestore="1">
                    <label>Header Menu</label>
                    <comment>This has to be in JSON format. [This will be replaced with Ranges/ArraySerialized]</comment>
                </field>
                <field id="logo" type="Magento\Config\Block\System\Config\Form\Field\File"
                       translate="label" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Header Logo</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">ui</upload_dir>
                    <comment>'png', 'jpg', 'jpeg', 'svg' file formats are allowed.</comment>
                </field>
                <field id="right_logo" type="Magento\Config\Block\System\Config\Form\Field\File"
                       translate="label" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Header Right Logo</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">ui</upload_dir>
                    <comment>'png', 'jpg', 'jpeg', 'svg' file formats are allowed.</comment>
                </field>
            </group>

            <group id="home" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0"
                   showInStore="0">
                <label>Home header Settings</label>
                <field id="title" showInStore="0" showInWebsite="1" showInDefault="1" sortOrder="10"
                       type="textarea" translate="label" canRestore="1">
                    <label>Banner Title</label>
                </field>
                <field id="description" showInStore="0" showInWebsite="1" showInDefault="1" sortOrder="20"
                       type="textarea" translate="label" canRestore="1">
                    <label>Banner Description</label>
                </field>
                <field id="banner" type="Magento\Config\Block\System\Config\Form\Field\File"
                       translate="label" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Banner Image</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">ui</upload_dir>
                    <comment>'png', 'jpg', 'jpeg', 'svg' file formats are allowed.</comment>
                </field>
            </group>

            <group id="footer" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="0"
                   showInStore="0">
                <label>Footer Settings</label>

                <field id="navigation" showInStore="0" showInWebsite="1" showInDefault="1" sortOrder="10"
                       type="textarea" translate="label" canRestore="1">
                    <label>Footer Menu</label>
                    <comment>This has to be in JSON format. [This will be replaced with Ranges/ArraySerialized]</comment>
                </field>
                <field id="logo" type="Magento\Config\Block\System\Config\Form\Field\File"
                       translate="label" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Footer Logo</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">ui</upload_dir>
                    <comment>'png', 'jpg', 'jpeg', 'svg' file formats are allowed.</comment>
                </field>
            </group>

        </section>
    </system>
</config>